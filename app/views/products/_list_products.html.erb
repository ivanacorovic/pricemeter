<%@products=@products.paginate(:page => params[:page], :per_page => 10)%>
<div class="container">
  <div class="row">

    <div class="col-md-12">
      <% @products.each_with_index do |product, index| %>
        <% if index % 5 == 0 %>
          <div class="row">
        <% end %>
          <div class="col-md-2">
            <div class="thumbnail", id="product">
              <%= image_tag product.image.url(:medium), size: '75x75' %>
              <div class="caption">
                <p align="center">
                  <%=product.name %><br>
                  <%= link_to product_path(product), class: "btn btn-info", id: "Details#{product.id}", role: "button" do %>
                      <span style="font-size:10px;">Details</span>
                   <% end %>
                  </p>
                </div>
              </div>
            </div>
          <% if index % 5 == 4 %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<center><%= will_paginate @products %></center>

  
