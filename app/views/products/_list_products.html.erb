<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr class="product">
        <td><%= product.name %></td>
        <td><%=image_tag product.image.url(:thumb)%></td>
        <td><%=link_to "Details",product_path(product), id: "Details#{product.id}"  %></td>
      </tr>
      <br>
   
  </tbody>
</table>
 <%end%>
